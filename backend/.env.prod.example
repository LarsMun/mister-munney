###> symfony/framework-bundle ###
APP_ENV=prod
APP_DEBUG=false
# Generate a new secret with: openssl rand -hex 32
APP_SECRET=your_64_character_app_secret_here_generated_with_openssl_rand_hex_32
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Deze URL wordt overridden door docker-compose.prod.yml
# Maar kan gebruikt worden voor lokale productie tests
DATABASE_URL="mysql://money:MYSQL_PASSWORD_HERE@127.0.0.1:3334/money_db_prod?serverVersion=8.0&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> nelmio/cors-bundle ###
# Production - only allow production domain (munney.example.com)
# This should match your production frontend URL
CORS_ALLOW_ORIGIN='^https://munney\.example\.com$'
###< nelmio/cors-bundle ###

###> symfony/lock ###
# Lock storage for rate limiting
LOCK_DSN=flock
###< symfony/lock ###

###> lexik/jwt-authentication-bundle ###
# JWT passphrase for token signing (used by docker-compose.prod.yml)
# Generate with: openssl rand -hex 32
JWT_PASSPHRASE=your_64_character_jwt_passphrase_here_generated_with_openssl_rand_hex_32
###< lexik/jwt-authentication-bundle ###