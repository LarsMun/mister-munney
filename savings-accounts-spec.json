{
  "openapi": "3.0.0",
  "info": {
    "title": "Mr Munney API",
    "description": "Documentatie",
    "version": "1.0.0"
  },
  "paths": {
    "/api/account/{accountId}/savings-accounts": {
      "get": {
        "tags": [
          "Savings Accounts"
        ],
        "summary": "Toon alle spaarrekeningen van een account",
        "operationId": "get_savings_accounts_list",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "description": "ID van het account waarvan de spaarrekeningen worden opgehaald",
            "required": true,
            "schema": {
              "type": "integer",
              "maximum": 2147483647,
              "minimum": 1,
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lijst van spaarrekeningen",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SavingsAccountDTO"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Savings Accounts"
        ],
        "summary": "Maak een nieuwe spaarrekening aan",
        "operationId": "post_savings_account_create",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "description": "ID van de gekoppelde betaalrekening",
            "required": true,
            "schema": {
              "type": "integer",
              "maximum": 2147483647,
              "minimum": 1,
              "example": 1
            }
          }
        ],
        "requestBody": {
          "description": "Gegevens van de nieuwe spaarrekening",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "description": "Naam van de spaarrekening",
                    "type": "string",
                    "example": "Vakantie naar Amerika"
                  },
                  "targetAmount": {
                    "description": "Streefbedrag voor de spaarrekening (optioneel)",
                    "type": "number",
                    "format": "float",
                    "example": 1500
                  },
                  "color": {
                    "description": "Kleur van de spaarrekening (bijv. in UI)",
                    "type": "string",
                    "example": "#FFCC00"
                  }
                },
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Spaarrekening succesvol aangemaakt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SavingsAccountDTO"
                }
              }
            }
          },
          "400": {
            "description": "Ongeldige invoer"
          },
          "409": {
            "description": "Spaarrekening bestaat al"
          },
          "500": {
            "description": "Interne serverfout"
          }
        }
      }
    },
    "/api/account/{accountId}/savings-accounts/{id}": {
      "get": {
        "tags": [
          "Savings Accounts"
        ],
        "summary": "Toon details van een specifieke spaarrekening",
        "operationId": "get_savings_account_show",
        "parameters": [
          {
            "name": "account",
            "in": "path",
            "description": "ID van het account waarin gezocht moet worden",
            "required": true,
            "schema": {
              "type": "integer",
              "maximum": 2147483647,
              "minimum": 1,
              "example": 1
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "ID van de spaarrekening",
            "required": true,
            "schema": {
              "type": "integer",
              "maximum": 2147483647,
              "minimum": 1,
              "example": 42
            }
          },
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Spaarrekening niet gevonden of hoort niet bij dit account"
          }
        }
      },
      "put": {
        "tags": [
          "Savings Accounts"
        ],
        "summary": "Werk een bestaande spaarrekening bij",
        "operationId": "put_savings_account_update",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "maximum": 2147483647,
              "minimum": 1,
              "example": 1
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "maximum": 2147483647,
              "minimum": 1,
              "example": 1
            }
          }
        ],
        "requestBody": {
          "description": "Nieuwe waarden voor de spaarrekening (alle velden optioneel)",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateSavingsAccountDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Spaarrekening bijgewerkt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SavingsAccountDTO"
                }
              }
            }
          },
          "400": {
            "description": "Ongeldige invoer"
          },
          "404": {
            "description": "Spaarrekening niet gevonden"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Interne serverfout"
          }
        }
      },
      "delete": {
        "tags": [
          "Savings Accounts"
        ],
        "summary": "Verwijder een spaarrekening",
        "operationId": "delete_savings_account_delete",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID van de spaarrekening die je wilt verwijderen",
            "required": true,
            "schema": {
              "type": "integer",
              "maximum": 2147483647,
              "minimum": 1,
              "example": 42
            }
          },
          {
            "name": "accountId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Spaarrekening succesvol verwijderd"
          },
          "404": {
            "description": "Spaarrekening niet gevonden"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SavingsAccountDTO": {
        "required": [
          "id",
          "name",
          "accountId"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "targetAmount": {
            "type": "string",
            "nullable": true
          },
          "accountId": {
            "type": "integer"
          },
          "color": {
            "type": "string",
            "nullable": true
          }
        },
        "type": "object"
      },
      "UpdateSavingsAccountDTO": {
        "required": [
          "name",
          "targetAmount",
          "color"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "Buffer"
          },
          "targetAmount": {
            "type": "number",
            "maximum": 1000000,
            "minimum": 0,
            "example": 1000
          },
          "color": {
            "type": "string",
            "example": "#FFCC00"
          }
        },
        "type": "object"
      }
    }
  },
  "tags": [
    {
      "name": "Savings Accounts",
      "description": "Beheer van spaarrekeningen: aanmaken, bewerken, verwijderen en automatisch toewijzen van transacties op basis van patronen."
    }
  ]
}
